var ebay = angular.module('ebay', ['ui.router'])
.config(function($routeProvider) {
    $routeProvider
    .when("/", {
        templateUrl : "/templates/header.html"
    })
    .when("/red", {
        templateUrl : "/templates/footer.html"
    })
    .when("/green", {
        templateUrl : "/templates/login.html"
    })
    .when("/blue", {
        templateUrl : "blue.htm"
    });
});