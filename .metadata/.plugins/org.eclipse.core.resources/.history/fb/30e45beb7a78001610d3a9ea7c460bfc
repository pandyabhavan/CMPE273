<script type="text/javascript">
var mattress = {
		length:80,
		width:76,
		height:12,
		area: function(){
			document.getElementById("output").innerHTML = "Estimated Cost :"+costs;
			return this.length*this.width*this.height;
		}
		cost: function(){
			var costs = this.area * 2;
			document.getElementById("output").innerHTML = "Estimated Cost :"+costs;
			return costs;
		}
};
</script>
</head>
<body>
<h1>Enter dimensions for mattress</h1>
<form>
