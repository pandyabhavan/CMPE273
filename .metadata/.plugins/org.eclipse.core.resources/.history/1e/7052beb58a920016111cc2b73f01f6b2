var mysql = require("./mysql");
var ejs = require("ejs");

function getCheckoutSession(req,res)
{
	var response;
	if(req.session.login)
	{
		response = {"statusCode":200,"data":req.session.checkout.total};
		res.send(JSON.stringify(response));
	}
	else
	{
		response = {"statusCode":401,"data":null};
		res.send(JSON.stringify(response));
	}
}

function getCheckoutPage(req,res)
{
	ejs.renderFile('./views/checkout.ejs',function(err, result) {
		if (!err) {
			res.end(result);
		}
		else {
			res.end('An error occurred');
			console.log(err);
		}
	});
}

function productSold(req,res)
{
	var cart = true,item = true, buy_sell = true;
	if(req.session.login)
	{
		var item_quantity = req.session.checkout.quantity;
		var user_id = req.session.login.id;
		for(var i=0;i<item_quantity.length;i++)
		{
			var query1 = "delete from cart where user_id="+user_id+" and item_id = "+item_quantity[i].item_id+"";
			mysql.fetchData(function(err,results){
				if(err)
				{
					
				}
				else
				{
					var query2 = "update item set quantity_remaining = quantity_remaining-2 where id = "+item_quantity[i].item_id+"";
					mysql.fetchData(function(err,results){
						if(err)
						{
							
						}
						else
						{
							var query3 = "select user_id from item where id = "+item_quantity[i].item_id+"";
							mysql.fetchData(function(err,results){
								if(err)
								{
									buy_sell = false;
								}
								else
								{
									var query4 = "insert into buy_sell (seller_id,buyer_id,item_id,quantity,purchase_date) values("+results[0].user_id+","+user_id+","+item_quantity[i].item_id+","+item_quantity[i].quantity+",now());";
									mysql.fetchData(function(err,results){
										if(err)
										{
											item = false;
										}
										else
										{
											item = true;
										}
									},query4);
									buy_sell = true;
								}
							},query3);
						}
					},query2);
				}
			},query1);			
		}
	}
	else
	{
		response = {"statusCode":401,"data":null};
		res.send(JSON.stringify(response));
	}
}

exports.getCheckoutSession = getCheckoutSession;
exports.getCheckoutPage = getCheckoutPage;
exports.productSold = productSold;