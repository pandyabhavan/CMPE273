ebay.controller('searchController', function ($scope, $http, $window,$state,$rootScope) {
	$scope.items_scope = [{"id":1,"name":"laptop","description":"dfaafa","price":19.99}];
	$window.alert('in Search Controller');
	$scope.$on('searchResults', function(event, args) {
		$window.alert('in Search Controller1'+ args.data);
		console.log('args data '+args);
		$scope.items_scope = args.data;
	});
	$window.alert('in Search Controller'+$scope.items_scope);
});