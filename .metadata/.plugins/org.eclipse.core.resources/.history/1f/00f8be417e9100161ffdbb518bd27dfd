ebay.controller('searchController', function ($scope, $http, $window,$state) {
	$http({
        method: "POST",
        url: "/getSearchSession",
    }).success(function (data) {
        if(data.statusCode == 401)
        {
        	$scope.mylink = "/";
        }
        else if(data.statusCode == 200)
        {
        	$scope.items = data.data;
        	
        }
        else
    	{
        	$scope.mylink = "/";
    	}
    	}).error(function (error) {
        	$scope.mylink = "/";
    	});	
});