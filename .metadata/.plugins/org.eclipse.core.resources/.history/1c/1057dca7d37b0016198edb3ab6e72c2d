<!DOCTYPE html>
<html>
<head>
    <title>Type Conversions</title>
    <script type="text/javascript">
        function typeConversions() {
            var name = document.getElementById("name").value;
            var salary = document.getElementById("salary").value;
            var birthdate = document.getElementById("birthdate").value;

            //converting salary to number for calculating yearly salary
            var yearlySalary = Number(salary) * 12;
            //calculating age from birthdate
            var today = new Date();
            var birthDate = new Date(birthdate);
            var age = today.getFullYear() - birthDate.getFullYear();
            var m = today.getMonth() - birthDate.getMonth();
            if (m < 0 || (m === 0 && today.getDate() < birthDate.getDate()))
            {
                age--;
            }
            window.alert('Hi '+name+',\n Your yearly salary is: '+ yearlySalary + '\n And your age is: ' + age);
        }
    </script>
</head>

<body>
    <form>
        <table>
            <tr>
                <td><label for="name">Name</label></td>
                <td><input type=text" id="name"><br></td>
            </tr>
            <tr>
                <td><label for=salary>Salary</label></td>
                <td><input type="number" id=salary><br></td>
            </tr>
            <tr>
                <td><label for=birthdate>Birth Date</label></td>
                <td><input type="date" id=birthdate><br></td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="button" id="percentage" value="Review Data"
                           onclick="typeConversions()" />
                </td>
            </tr>
        </table>
    </form>
</body>
</html>