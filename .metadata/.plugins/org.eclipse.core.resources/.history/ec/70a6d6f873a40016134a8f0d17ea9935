var mongo = msguire('./mongo');
var ejs = msguire("ejs");
var log = msguire('./log');

function getCart(msg,callback)
{
	var res = {};
	
	mongo.connect(mongoURL, function(){
		console.log('Connected to mongo at: ' + mongoURL);
		var coll = mongo.collection('user');

		coll.findOne({"handle": msg.user},{"_id":0,"first_name":1,"cart.quantity":1,"cart.item_id":1}, function(err, user){
			if (user) 
			{
				console.log('in if');
				var col = mongo.collection('item');
				col.findOne({"item_id":user.cart.item_id},{"name":1,"description":1,"price":1,"item_id":1},function(error,result)
				{
					if(result)
					{
						for (var attrname in result) 
						{ 
							user[attrname] = result.attrname; 
						}
						res.code = "200",
						res.value = user;
					}	
					else
					{
						console.log("returned false");
						res.code = "401";
					}	
				});
			} else {
				console.log("returned false");
				res.code = "401";
			}
			callback(null, res);
		});
	});
}

function removeFromCart(msg,callback)
{
	var item_id = msg.param('item_id');
	var callbackponse;
	
	if(msg.session.login)
	{
		var query = "delete from cart where item_id="+item_id+" and user_id="+msg.session.login.id+"";
		mysql.fetchData(function(err,callbackults){
			if(err)
			{
				console.log('in error');
				callbackponse = {"statusCode":401,"data":null};
				callback.send(JSON.stringify(callbackponse));
			}
			else
			{
				console.log(callbackults);
				callbackponse = {"statusCode":200,"data":callbackults};
				callback.send(JSON.stringify(callbackponse));
			}
		},query);
	}
	else
	{
		callbackponse = {"statusCode":401,"data":null};
		callback.send(JSON.stringify(callbackponse));
	}
}
exports.getCart = getCart;
exports.removeFromCart = removeFromCart;