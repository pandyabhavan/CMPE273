function removeFromCart(msg,callback)
{
	var item_id = msg.param('item_id');
	var callbackponse;
	
	if(msg.session.login)
	{
		var query = "delete from cart where item_id="+item_id+" and user_id="+msg.session.login.id+"";
		mysql.fetchData(function(err,callbackults){
			if(err)
			{
				console.log('in error');
				callbackponse = {"statusCode":401,"data":null};
				callback.send(JSON.stringify(callbackponse));
			}
			else
			{
				console.log(callbackults);
				callbackponse = {"statusCode":200,"data":callbackults};
				callback.send(JSON.stringify(callbackponse));
			}
		},query);
	}
	else
	{
		callbackponse = {"statusCode":401,"data":null};
		callback.send(JSON.stringify(callbackponse));
	}
}
exports.getCart = getCart;
exports.removeFromCart = removeFromCart;