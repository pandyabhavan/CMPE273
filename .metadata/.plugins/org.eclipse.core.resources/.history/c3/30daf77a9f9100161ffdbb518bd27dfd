ebay.controller('cartController', function ($scope, $http, $window,$state) {
	
	$scope.no_item = false;
	$scope.div = true;
	
	$scope.getCart = function()
	{
	$http({
		method: "POST",
		url: "/getCart",
	}).success(function (data) {
		if(data.statusCode == 401)
		{
			$scope.no_item = false;
			$scope.div = true;
		}
		else if(data.statusCode == 200)
		{
			$scope.no_item = true;
			$scope.div = false;
			$scope.carts = data.data;
			$scope.subtotal = 0;
			$scope.sales_tax = 0;
			$scope.total = 0;
			$window.alert(data.data.length+' '+data.data[0].price);
			for(var i=0;i<data.data.length;i++)
			{
				$scope.subtotal += Number(data.data[i].price);
			}
			$scope.sales_tax = Number((0.09*$scope.subtotal).toFixed(2));
			$scope.total = $scope.subtotal + $scope.sales_tax;
		}
		else
		{
			$scope.no_item = false;
			$scope.div = true;
			$window.location = "/";
		}
	}).error(function (error) {
		$window.alert('Something went wrong. Please try agian.');
		$window.location = "/";
	});
	}
});