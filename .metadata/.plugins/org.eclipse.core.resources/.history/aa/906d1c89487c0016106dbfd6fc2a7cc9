</head>
<body>
    <form>
        <!-- This panel is for login -->
        <div class="panel panel-primary">
            <!-- Default panel contents -->
            <div class="panel-heading">Login</div>
            <div class="panel-body">
                    <div class="form-group">
                        <label for="inputUsername" class="colsm-2 control-label pull-left" >Username</label>
                        <div class="col-sm-10">
                            <input type="text" class="formcontrol" id="inputUsername" placeholder="Username">
                        </div>
                    </div>
                <br /><br />
                    <div class="form-group usernameDiv">
                        <label for="inputPassword" class="colsm-2 control-label pull-left">Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="formcontrol"
                                   name="inputPassword" id="inputPassword" placeholder="Password">
                        </div>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <div class="pull-left signIn">
                            <button type="submit" class="btn btnprimary" onclick="saveUsername()">
                               Submit
                            </button>
                            <input type="button" class="btn" onclick="clearLocalStorage()" value="Clear Local Storage" />
                        </div>
                    </div>
            </div>
        </div>
    </form>
    <script type="text/javascript">
        if (typeof (Storage) !== "undefined") {
            if(localStorage.username)
                document.getElementById('inputUsername').value = localStorage.username;
    }
    else
        window.alert('Local Storage is not supported by browser.');
    function saveUsername() {
        localStorage.username = document.getElementById('inputUsername').value;
        window.alert('Username Saved successfully.Try using reloading.');
    }
    function clearLocalStorage() {
        localStorage.clear();
    }
    </script>
